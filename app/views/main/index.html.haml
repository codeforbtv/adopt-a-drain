          = render :partial => "sidebar/search"
        - else
          = render :partial => "sidebar/combo_form"

      #feedback
        %br
        %br
        %br
        %p
          Report maintenance needs to:
          %a{:href => "http://www.seeclickfix.com/burlington_2"}www.seeclickfix.com/burlington_2.

    .table-cell.map-container
      #map        
        &nbsp;
      #legend
